@model List<Pet>
    <h1>All pets from the model</h1>
    <a asp-action="New" class="btn btn-primary">Add New Pet</a>

    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Age</td>
                <td>Color</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var pet in Model){
                <tr>
                <td>@pet.Id</td>
                <td>@pet.Name</td>
                <td>@pet.Age</td>
                <td>@pet.color</td>
                <td>
                    <a asp-action="edit" asp-route-Id = "@pet.Id">Edit</a>|
                    <a asp-action="delete" asp-rpute-Id ="@pet.Id">Delete</a>
                </td>
              

            </tr>
            }
            
        </tbody>
    </table>